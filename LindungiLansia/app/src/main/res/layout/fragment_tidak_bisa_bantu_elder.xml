<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/soft_red">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TidakBisaBantuElderFragment"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivTidakBisaBantuElder"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:rotation="45"
            android:src="@drawable/ic_round_add_circle_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnKembaliTidakBisaBantuElder"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_round_arrow_back_ios_24_pure_white"
            android:fontFamily="sans-serif"
            android:text="Kembali"
            android:textAllCaps="false"
            android:textColor="@color/pure_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clElderTidakBisaBantuElder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounder_corner_25"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTidakBisaBantuElder">

            <TextView
                android:id="@+id/tvElderTidakBisaBantuElder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himajime Ujang"
                android:textColor="@color/jet_black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.653"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.492" />

            <ImageView
                android:id="@+id/ivElderTidakBisaBantuElder"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/default_profile"
                app:layout_constraintBottom_toBottomOf="@+id/tvElderTidakBisaBantuElder"
                app:layout_constraintEnd_toStartOf="@+id/tvElderTidakBisaBantuElder"
                app:layout_constraintTop_toTopOf="@+id/tvElderTidakBisaBantuElder" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCaregiverListTidakBisaBantuElder"
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounder_corner_25"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clElderTidakBisaBantuElder">

            <ImageView
                android:id="@+id/ivCaregiverTidakBisaBantuElder1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_profile"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>